Create React App
Bash

npm create vite@latest frontend -- --template react
cd frontend
npm install
frontend/src/App.jsx
React

import { useState, useEffect } from 'react';
import './App.css';

function App() {
  const [messages, setMessages] = useState([]);
  const [serverInfo, setServerInfo] = useState(null);
  const [newMessage, setNewMessage] = useState('');
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);

  // Fetch messages
  const fetchMessages = async () => {
    try {
      const res = await fetch('/api/messages');
      const data = await res.json();
      setMessages(data.messages || []);
      setError(null);
    } catch (err) {
      setError('Failed to fetch messages');
      console.error(err);
    } finally {
      setLoading(false);
    }
  };

  // Fetch server info
  const fetchInfo = async () => {
    try {
      const res = await fetch('/api/info');
      const data = await res.json();
      setServerInfo(data);
    } catch (err) {
      console.error('Failed to fetch server info', err);
    }
  };

  // Submit new message
  const handleSubmit = async (e) => {
    e.preventDefault();
    if (!newMessage.trim()) return;

    try {
      const res = await fetch('/api/messages', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ text: newMessage })
      });
      
      if (res.ok) {
        setNewMessage('');
        fetchMessages(); // Refresh list
        fetchInfo(); // Update server info to see which instance handled it
      }
    } catch (err) {
      console.error('Failed to post message', err);
    }
  };

  useEffect(() => {
    fetchMessages();
    fetchInfo();
    
    // Auto-refresh every 3 seconds to see load balancing
    const interval = setInterval(() => {
      fetchMessages();
      fetchInfo();
    }, 3000);
    
    return () => clearInterval(interval);
  }, []);

  return (
    <div className="app">
      <header>
        <h1>üöÄ AWS Full Stack App with Load Balancing</h1>
        <p>React + Node.js + Express + ALB</p>
      </header>

      {/* Server Info Card */}
      {serverInfo && (
        <div className="server-info">
          <h3>üñ•Ô∏è Current Backend Server</h3>
          <div className="info-grid">
            <div><strong>Host:</strong> {serverInfo.host}</div>
            <div><strong>CPUs:</strong> {serverInfo.cpus}</div>
            <div><strong>Memory:</strong> {serverInfo.memory.free} / {serverInfo.memory.total}</div>
            <div><strong>Uptime:</strong> {serverInfo.uptime}</div>
            <div><strong>Platform:</strong> {serverInfo.platform} ({serverInfo.arch})</div>
            <div><strong>Node:</strong> {serverInfo.nodeVersion}</div>
          </div>
          <p className="note">
            üí° Refresh to see different hosts (load balancing in action!)
          </p>
        </div>
      )}

      {/* Message Form */}
      <div className="message-form">
        <h3>‚úâÔ∏è Add Message</h3>
        <form onSubmit={handleSubmit}>
          <input
            type="text"
            value={newMessage}
            onChange={(e) => setNewMessage(e.target.value)}
            placeholder="Enter your message..."
          />
          <button type="submit">Send</button>
        </form>
      </div>

      {/* Messages List */}
      <div className="messages">
        <h3>üì¨ Messages</h3>
        {loading && <p>Loading...</p>}
        {error && <p className="error">{error}</p>}
        {!loading && messages.length === 0 && <p>No messages yet</p>}
        
        <div className="message-list">
          {messages.map((msg, idx) => (
            <div key={idx} className="message-card">
              <p className="message-text">{msg.text}</p>
              <small>
                Server: <code>{msg.host}</code> | 
                {new Date(msg.timestamp).toLocaleString()}
              </small>
            </div>
          ))}
        </div>
      </div>
    </div>
  );
}

export default App;
frontend/src/App.css
